@model RTA_Project_MVC.Models.ArticleViewModel

<script src="~/Plugins/ckeditor/ckeditor.js"></script>

<h2>Добавить новость</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">Заголовок</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Содержание</label>
        <div class="col-md-12">
            @Html.TextAreaFor(model => model.Content, new { @id = "ArticleContent", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
        </div>
        <script>
            CKEDITOR.replace("ArticleContent", { htmlEncodeOutput: true });
        </script>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Добавить" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
