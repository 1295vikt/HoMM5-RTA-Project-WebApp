

<h2>Регистрация профиля игрока</h2>


    @Html.AntiForgeryToken()

    <h4>Ваша учетная запись не имеет связанного профиля игрока.</h4>
    <h4>Создайте новый профиль, либо привяжите уже существующий, введя его уникальный ключ.</h4>

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @using (Html.BeginForm("Create", "Profile", FormMethod.Post))
        {
            <div class="col-md-6">
                @Html.Partial("_PlayerCreatePartial")
            </div>
        }
        @using (Html.BeginForm("Link", "Profile", FormMethod.Post))
        {
            <div class="col-md-6">
                @Html.Partial("_PlayerLinkPartial")
            </div>
        }
        </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
